<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="provider" class="com.thjug.bgile.web.driver.DefaultWebDriverProvider" />

    <bean id="perScenarioWebDriverSteps" class="org.jbehave.web.selenium.PerScenarioWebDriverSteps">
        <constructor-arg ref="provider"/>
    </bean>

    <bean id="template" class="com.thjug.bgile.step.TemplateStep">
        <constructor-arg ref="provider"/>
    </bean>

</beans>